<?xml version="1.0" encoding="utf-8"?>
<com.qkl.online.mining.app.ui.view.VpSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_game_refreshlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg_color"
        android:orientation="vertical">

        <View
            android:id="@+id/fragment_game_titleview"
            android:layout_width="1dip"
            android:layout_height="0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:singleLine="true"
            android:text="@string/fragment_game_page_title"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/fragment_game_banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:layout_marginTop="10dip" />

                <TextView
                    android:id="@+id/fragment_game_title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="10dip"
                    android:background="@drawable/shape_game_renwu_bg"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:singleLine="true"
                    android:text="@string/game_today_task_txt"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_game_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_ffffff"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</com.qkl.online.mining.app.ui.view.VpSwipeRefreshLayout>